# =============================================================================
# Nginx mTLS + SPA Deployment for JumpServer
# =============================================================================

upstream jumpserver_backend {
    server 127.0.0.1:8080;
    keepalive 32;
}

server {
    listen 80;
    listen [::]:80;
    server_name jumpserver.example.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name jumpserver.example.com;
    root /opt/jumpserver/frontend/dist;
    index index.html;

    ssl_certificate /etc/letsencrypt/live/jumpserver.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jumpserver.example.com/privkey.pem;

    ssl_client_certificate /etc/nginx/ssl/internal-ca.crt;
    ssl_verify_client optional;
    ssl_verify_depth 2;
    ssl_crl /etc/nginx/ssl/internal-ca.crl;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    location = /certificate-error.html {
        root /usr/share/nginx/html;
        internal;
    }

    log_format mtls '$remote_addr - $remote_user [$time_local] '
                    '"$request" $status $body_bytes_sent '
                    '"$http_referer" "$http_user_agent" '
                    'cert_verify=$ssl_client_verify cert_dn="$ssl_client_s_dn"';
    access_log /var/log/nginx/jumpserver-mtls.log mtls;

    location /static/ {
        alias /opt/jumpserver/data/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    location /media/ {
        alias /opt/jumpserver/data/media/;
        expires 7d;
    }

    # -------------------------------------------------------------------------
    # Frontend SPA (cert users) - falls back to index.html
    location / {
        try_files $uri /index.html;
    }

    # Admin password/MFA interface
    location ^~ /admin {
        proxy_pass http://jumpserver_backend;
        proxy_set_header X-SSL-Client-Cert $ssl_client_cert;
        proxy_set_header X-SSL-Client-DN $ssl_client_s_dn;
        proxy_set_header X-SSL-Client-Verify $ssl_client_verify;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # Django core endpoints (MFA, login guard, etc.)
    location ^~ /core/ {
        proxy_pass http://jumpserver_backend;
        proxy_set_header X-SSL-Client-Cert $ssl_client_cert;
        proxy_set_header X-SSL-Client-DN $ssl_client_s_dn;
        proxy_set_header X-SSL-Client-Verify $ssl_client_verify;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    location ^~ /api/ {
        proxy_pass http://jumpserver_backend;
        proxy_set_header X-SSL-Client-Cert $ssl_client_cert;
        proxy_set_header X-SSL-Client-DN $ssl_client_s_dn;
        proxy_set_header X-SSL-Client-Verify $ssl_client_verify;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        client_max_body_size 10G;
    }

    location ^~ /ws/ {
        proxy_pass http://jumpserver_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-SSL-Client-Cert $ssl_client_cert;
        proxy_set_header X-SSL-Client-DN $ssl_client_s_dn;
        proxy_set_header X-SSL-Client-Verify $ssl_client_verify;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /api/health/ {
        proxy_pass http://jumpserver_backend;
        satisfy any;
        allow all;
        access_log off;
    }
}
